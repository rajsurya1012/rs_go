<launch>
  <!-- Arguments -->

  <arg name="map_file" default="$(find rs_go)/map/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>


  <include file="$(find rs_go)/launch/gazebo.launch">
   
  </include >

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find rs_go)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find rs_go)/launch/move_base.launch">
    
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find rs_go)/rviz/rviz.rviz"/>
  </group>
</launch>
